// views/health.ejs
<%- include('layouts/header') %>

<main class="container mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-md p-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">État du Système</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-gray-50 p-4 rounded-lg">
                <h2 class="text-xl font-semibold mb-4">Status</h2>
                <div class="flex items-center">
                    <div class="w-4 h-4 rounded-full bg-green-500 mr-2"></div>
                    <span class="text-lg"><%= status %></span>
                </div>
                <p class="mt-2">Uptime: <%= uptime.toFixed(2) %> secondes</p>
            </div>

            <div class="bg-gray-50 p-4 rounded-lg">
                <h2 class="text-xl font-semibold mb-4">Utilisation Mémoire</h2>
                <div class="relative pt-1">
                    <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-gray-200">
                        <div style="width:<%= memory.usage %>" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-blue-500"></div>
                    </div>
                    <div class="flex justify-between">
                        <span>Utilisé: <%= memory.usage %></span>
                        <span>Total: <%= (memory.total / 1024 / 1024 / 1024).toFixed(2) %> GB</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('layouts/footer') %> 